[include]
    path=.gitconfig.local
[core]
    excludesfile = ~/dotfiles/git/gitignore
    editor = /usr/bin/vim
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    g = grep --break --heading --line-number
    up = !git remote update -p; git merge --ff-only @{u}
[github]
    user = rambominator
[color]
    ui = true
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[push]
    default=current
[grep]
    extendRegexp = true
    lineNumber = true
[merge]
    tool = p4merge
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "p4merge"]
    path = ~/.local/bin/p4merge
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
