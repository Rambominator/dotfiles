%include ~/.hgrc.local

[ui]
ignore = ~/dotfiles/hg/hgignore

[extensions]
color =
pager =
purge =
rebase =
shelve =
record =
graphlog =
mercurial_keyring =
remotebranches = $HOME/dotfiles/hg/hg_remotebranches.py

[color]
status.added = green
status.modified = yellow
status.unknown = cyan

[pager]
pager = LESS='FRX' less
attend = cat, diff, glog, log, incoming, outgoing, show, hist

[alias]
hist = glog --style=$HOME/dotfiles/hg/log.style

[merge-tools]
splice.executable = vim
splice.args = -f $base $local $other $output -c 'SpliceInit'
splice.premerge = keep
splice.priority = 1
