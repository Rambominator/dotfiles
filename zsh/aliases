#aliases
#
#git
alias g='git '
alias gs='git status '
alias ga='git add '
alias gb='git branch '
alias gc='git commit'
alias gd='git diff --color'
alias gk='gitk --all&'
alias gx='gitx --all'
alias gl='git pull'
alias gp='git push'
alias gca='git commit -a'

#hg
alias h='hg '
alias hs='hg status'
alias hd='hg diff'
alias hl='hg pull'
alias hp='hg push -r .'
alias hgl='hg hist'

alias sd='sudo'
alias vi='vim'
alias ac='apt-cache'
alias acs='apt-cache search'
alias ai='sudo apt-get install'
alias au='sudo apt-get update && sudo apt-get dist-upgrade'
alias py='python'
alias da='django-admin'

alias -s pdf=evince

#functions
alias m=django_manage
alias djsettings=set_django_settings_module
alias hgp=set_hg_prompt
alias gdh=git_diff_head
alias gtags=generate_ctags

# specific settings for my laptop
if [ $HOST = thin ]; then GEOM='1000x700'; else GEOM='1200x900'; fi
alias rds="rdesktop -k en-us -g $GEOM -U administrator $@ > /dev/null 2>&1"

case `uname` in
  Darwin)
    alias nvim='NVIM_TUI_ENABLE_TRUE_COLOR=1 nvim'
    ;;
  Linux)
    ;;
esac
