#aliases
#
#git
alias g='git '
alias gs='git status '
alias ga='git add '
alias gb='git branch '
alias gc='git commit'
alias gd='git diff --color'
alias gk='gitk --all&'
alias gx='gitx --all'
alias gl='git pull'
alias gp='git push'
alias gca='git commit -a'

#hg
alias h='hg '
alias hs='hg status'
alias hd='hg diff'
alias hl='hg pull'
alias hp='hg push -r .'
alias hgl='hg hist'

alias vim='nvim'
alias ac='apt-cache'
alias acs='apt-cache search'
alias ai='sudo apt-get install'
alias au='sudo apt-get update && sudo apt-get dist-upgrade'
alias py='python'
alias da='django-admin'

alias -s pdf=evince
alias ssh='TERM=xterm-256color ssh'

#functions
