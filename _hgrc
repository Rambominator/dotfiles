%include ~/.hgrc.local

[ui]
ignore = ~/dotfiles/hg/hgignore
editor = nvim

[extensions]
color =
pager =
purge =
rebase =
shelve =
graphlog =
strip =
histedit =
#mercurial_keyring =
#remotebranches = $HOME/dotfiles/hg/hg_remotebranches.py

[color]
status.added = green
status.modified = yellow
status.unknown = cyan

[pager]
pager = LESS='FRX' less
attend = cat, diff, glog, log, incoming, outgoing, show, hist

[alias]
hist = glog --style=$HOME/dotfiles/hg/log.style
burl =! bash -c 'hg paths | tail -1 | sed "s/^.*@\(.*\)/https:\/\/\1\/src\/`hg id -i | sed "s/+//"`\//"'

[merge-tools]
p4.priority = 60
p4.premerge = True
p4.executable = ~/.local/bin/p4merge
p4.gui = True
p4.args = $base $local $other $output
p4.binary = False
