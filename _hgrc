%include ~/.hgrc.local

[ui]
ignore = ~/dotfiles/hg/hgignore

[extensions]
color =
pager =
purge =
rebase =
shelve =
record =
graphlog =
strip =
histedit =
mercurial_keyring =
remotebranches = $HOME/dotfiles/hg/hg_remotebranches.py

[color]
status.added = green
status.modified = yellow
status.unknown = cyan

[pager]
pager = LESS='FRX' less
attend = cat, diff, glog, log, incoming, outgoing, show, hist

[alias]
hist = glog --style=$HOME/dotfiles/hg/log.style

[merge-tools]
p4.priority = 60
p4.premerge = True
p4.executable = ~/.local/bin/p4merge
p4.gui = True
p4.args = $base $local $other $output
p4.binary = False
